<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-[20px] font-semibold text-primary">Escalation Policies</h1>
    </div>
    <%= link_to new_dashboard_project_escalation_policy_path(@project), class: "px-4 py-2 text-[13px] font-medium rounded-lg transition-colors btn-theme-primary" do %>
      New Policy
    <% end %>
  </div>

  <!-- Stats -->
  <div class="grid grid-cols-2 gap-4">
    <div class="rounded-xl px-5 py-4 border border-theme bg-surface">
      <p class="text-[12px] font-medium uppercase tracking-wide text-muted">Total Policies</p>
      <p class="text-[28px] font-semibold mt-1 text-primary"><%= @total_count %></p>
    </div>
    <div class="rounded-xl px-5 py-4 border border-theme bg-surface">
      <p class="text-[12px] font-medium uppercase tracking-wide text-muted">Enabled</p>
      <p class="text-[28px] font-semibold mt-1 text-success"><%= @enabled_count %></p>
    </div>
  </div>

  <!-- Policies List -->
  <% if @escalation_policies.any? %>
    <div class="rounded-xl overflow-hidden border border-theme bg-surface">
      <% @escalation_policies.each_with_index do |policy, index| %>
        <%= link_to dashboard_project_escalation_policy_path(@project, policy), class: "block px-5 py-4 transition-colors hover:bg-surface-hover #{index > 0 ? 'border-t border-light' : ''}" do %>
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
              <!-- Status indicator -->
              <% if policy.enabled %>
                <span class="w-2 h-2 rounded-full" style="background: var(--color-success-dot);"></span>
              <% else %>
                <span class="w-2 h-2 rounded-full" style="background: var(--color-icon-muted);"></span>
              <% end %>

              <div>
                <div class="flex items-center gap-2">
                  <h3 class="text-[14px] font-medium text-primary"><%= policy.name %></h3>
                  <span class="px-2 py-0.5 text-[11px] font-medium uppercase rounded-full" style="background: var(--color-border-light); color: var(--color-text-subtle);"><%= policy.steps&.length || 0 %> steps</span>
                </div>
                <p class="text-[13px] mt-0.5 text-muted">
                  <% if policy.description.present? %>
                    <%= truncate(policy.description, length: 60) %>
                  <% else %>
                    No description
                  <% end %>
                </p>
              </div>
            </div>
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" style="color: var(--color-icon-muted);">
              <path d="M6 4L10 8L6 12" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="rounded-xl px-8 py-16 text-center border border-theme bg-surface">
      <svg class="mx-auto mb-4" width="48" height="48" viewBox="0 0 48 48" fill="none">
        <path d="M24 12V24L32 32" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="color: var(--color-icon-muted);"/>
        <circle cx="24" cy="24" r="16" stroke="currentColor" stroke-width="2" style="color: var(--color-icon-muted);"/>
      </svg>
      <h3 class="text-[16px] font-medium mb-2 text-primary">No escalation policies yet</h3>
      <p class="text-[14px] mb-6 text-muted">Create an escalation policy to automatically notify teams when alerts aren't acknowledged.</p>
      <%= link_to new_dashboard_project_escalation_policy_path(@project), class: "inline-block px-4 py-2 text-[13px] font-medium rounded-lg transition-colors btn-theme-primary" do %>
        Create Policy
      <% end %>
    </div>
  <% end %>
</div>
