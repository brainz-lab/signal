<div class="max-w-2xl space-y-6">
  <div class="flex items-center gap-2 mb-1">
    <%= link_to "Escalation Policies", dashboard_project_escalation_policies_path(@project), class: "text-[13px]", style: "color: #8B8780;" %>
    <span style="color: #C4C0B8;">/</span>
    <span class="text-[13px]" style="color: #1A1A1A;">New Policy</span>
  </div>

  <h1 class="text-[24px] font-semibold" style="color: #1A1A1A;">Create Escalation Policy</h1>

  <div class="rounded-xl px-6 py-6" style="border: 1px solid #E8E5E0; background: #FFFFFE;">
    <%= form_with model: @escalation_policy, url: dashboard_project_escalation_policies_path(@project), method: :post, class: "space-y-6", data: { controller: "escalation-steps" } do |f| %>
      <!-- Basic Info -->
      <div class="space-y-4">
        <div>
          <%= f.label :name, class: "block text-[13px] font-medium mb-1.5", style: "color: #1A1A1A;" %>
          <%= f.text_field :name, class: "w-full px-3 py-2 rounded-lg text-[14px] outline-none focus:ring-2 focus:ring-orange-500", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;", placeholder: "Critical Alerts Policy" %>
        </div>

        <div>
          <%= f.label :description, class: "block text-[13px] font-medium mb-1.5", style: "color: #1A1A1A;" %>
          <%= f.text_area :description, rows: 2, class: "w-full px-3 py-2 rounded-lg text-[14px] outline-none focus:ring-2 focus:ring-orange-500", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;", placeholder: "Escalate critical alerts to on-call and then management" %>
        </div>
      </div>

      <!-- Steps -->
      <div class="space-y-4 pt-4" style="border-top: 1px solid #F0EFED;">
        <h2 class="text-[15px] font-medium" style="color: #1A1A1A;">Escalation Steps</h2>
        <p class="text-[13px]" style="color: #8B8780;">
          Configure steps in the edit view after creating the policy. Each step defines which channel to notify and when.
        </p>

        <% if @channels.any? %>
          <div class="rounded-lg px-4 py-3" style="background: #F9FAFB; border: 1px solid #E8E5E0;">
            <p class="text-[13px]" style="color: #6B6760;">
              Available channels: <%= @channels.map(&:name).join(', ') %>
            </p>
          </div>
        <% else %>
          <div class="rounded-lg px-4 py-3" style="background: #FEF3C7; border: 1px solid #FCD34D;">
            <p class="text-[13px]" style="color: #92400E;">
              No notification channels configured. <%= link_to "Create a channel", new_dashboard_project_channel_path(@project), style: "color: #F97316; text-decoration: underline;" %> first.
            </p>
          </div>
        <% end %>
      </div>

      <!-- Repeat Settings -->
      <div class="space-y-4 pt-4" style="border-top: 1px solid #F0EFED;">
        <h2 class="text-[15px] font-medium" style="color: #1A1A1A;">Repeat Settings</h2>

        <div class="flex items-center gap-2">
          <%= f.check_box :repeat, class: "rounded" %>
          <%= f.label :repeat, "Repeat escalation if not acknowledged", class: "text-[13px]", style: "color: #1A1A1A;" %>
        </div>

        <div class="grid grid-cols-2 gap-4">
          <div>
            <%= f.label :repeat_after_minutes, "Repeat After (minutes)", class: "block text-[13px] font-medium mb-1.5", style: "color: #1A1A1A;" %>
            <%= f.number_field :repeat_after_minutes, class: "w-full px-3 py-2 rounded-lg text-[14px] outline-none focus:ring-2 focus:ring-orange-500", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;", placeholder: "30" %>
          </div>
          <div>
            <%= f.label :max_repeats, "Max Repeats", class: "block text-[13px] font-medium mb-1.5", style: "color: #1A1A1A;" %>
            <%= f.number_field :max_repeats, class: "w-full px-3 py-2 rounded-lg text-[14px] outline-none focus:ring-2 focus:ring-orange-500", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;", placeholder: "3" %>
            <p class="text-[12px] mt-1" style="color: #8B8780;">Leave blank for unlimited</p>
          </div>
        </div>
      </div>

      <div class="flex items-center gap-3 pt-4">
        <%= f.submit "Create Policy", class: "px-4 py-2 text-[13px] font-medium rounded-lg cursor-pointer transition-colors", style: "background: #1A1A1A; color: #FFFFFE;" %>
        <%= link_to "Cancel", dashboard_project_escalation_policies_path(@project), class: "px-4 py-2 text-[13px] font-medium rounded-lg transition-colors", style: "background: #F0EFED; color: #6B6760;" %>
      </div>
    <% end %>
  </div>
</div>
