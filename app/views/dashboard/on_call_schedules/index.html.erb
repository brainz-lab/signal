<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-[20px] font-semibold" style="color: #1A1A1A;">On-Call Schedules</h1>
    </div>
    <%= link_to new_dashboard_project_on_call_schedule_path(@project), class: "px-4 py-2 text-[13px] font-medium rounded-lg transition-colors", style: "background: #1A1A1A; color: #FFFFFE;" do %>
      New Schedule
    <% end %>
  </div>

  <!-- Stats -->
  <div class="grid grid-cols-2 gap-4">
    <div class="rounded-xl px-5 py-4" style="border: 1px solid #E8E5E0; background: #FFFFFE;">
      <p class="text-[12px] font-medium uppercase tracking-wide" style="color: #8B8780;">Total Schedules</p>
      <p class="text-[28px] font-semibold mt-1" style="color: #1A1A1A;"><%= @total_count %></p>
    </div>
    <div class="rounded-xl px-5 py-4" style="border: 1px solid #E8E5E0; background: #FFFFFE;">
      <p class="text-[12px] font-medium uppercase tracking-wide" style="color: #8B8780;">Enabled</p>
      <p class="text-[28px] font-semibold mt-1" style="color: #16A34A;"><%= @enabled_count %></p>
    </div>
  </div>

  <!-- Schedules List -->
  <% if @schedules.any? %>
    <div class="rounded-xl overflow-hidden" style="border: 1px solid #E8E5E0; background: #FFFFFE;">
      <% @schedules.each_with_index do |schedule, index| %>
        <%= link_to dashboard_project_on_call_schedule_path(@project, schedule), class: "block px-5 py-4 transition-colors hover:bg-gray-50", style: index > 0 ? "border-top: 1px solid #F0EFED;" : "" do %>
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
              <!-- Status indicator -->
              <% if schedule.enabled %>
                <span class="w-2 h-2 rounded-full" style="background: #16A34A;"></span>
              <% else %>
                <span class="w-2 h-2 rounded-full" style="background: #C4C0B8;"></span>
              <% end %>

              <div>
                <div class="flex items-center gap-2">
                  <h3 class="text-[14px] font-medium" style="color: #1A1A1A;"><%= schedule.name %></h3>
                  <span class="px-2 py-0.5 text-[11px] font-medium uppercase rounded-full" style="background: #F0EFED; color: #6B6760;"><%= schedule.schedule_type %></span>
                </div>
                <p class="text-[13px] mt-0.5" style="color: #8B8780;">
                  <% if schedule.current_on_call.present? %>
                    Currently: <span style="color: #1A1A1A;"><%= schedule.current_on_call %></span>
                  <% else %>
                    No one currently on call
                  <% end %>
                  &middot; <%= schedule.timezone %>
                </p>
              </div>
            </div>
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" style="color: #C4C0B8;">
              <path d="M6 4L10 8L6 12" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="rounded-xl px-8 py-16 text-center" style="border: 1px solid #E8E5E0; background: #FFFFFE;">
      <svg class="mx-auto mb-4" width="48" height="48" viewBox="0 0 48 48" fill="none">
        <rect x="10" y="10" width="28" height="28" rx="2" stroke="#C4C0B8" stroke-width="2"/>
        <path d="M10 18H38" stroke="#C4C0B8" stroke-width="2"/>
        <path d="M18 10V14M30 10V14" stroke="#C4C0B8" stroke-width="2" stroke-linecap="round"/>
      </svg>
      <h3 class="text-[16px] font-medium mb-2" style="color: #1A1A1A;">No on-call schedules yet</h3>
      <p class="text-[14px] mb-6" style="color: #8B8780;">Create an on-call schedule to manage who receives alerts.</p>
      <%= link_to new_dashboard_project_on_call_schedule_path(@project), class: "inline-block px-4 py-2 text-[13px] font-medium rounded-lg transition-colors", style: "background: #1A1A1A; color: #FFFFFE;" do %>
        Create Schedule
      <% end %>
    </div>
  <% end %>
</div>
