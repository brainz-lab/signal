<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-[20px] font-semibold dm-text">On-Call Schedules</h1>
    </div>
    <%= link_to new_dashboard_project_on_call_schedule_path(@project), class: "px-4 py-2 text-[13px] font-medium rounded-lg transition-colors dm-btn-primary" do %>
      New Schedule
    <% end %>
  </div>

  <!-- Stats -->
  <div class="grid grid-cols-2 gap-4">
    <div class="dm-card px-5 py-4">
      <p class="text-[12px] font-medium uppercase tracking-wide dm-text-muted">Total Schedules</p>
      <p class="text-[28px] font-semibold mt-1 dm-text"><%= @total_count %></p>
    </div>
    <div class="dm-card px-5 py-4">
      <p class="text-[12px] font-medium uppercase tracking-wide dm-text-muted">Enabled</p>
      <p class="text-[28px] font-semibold mt-1 text-success"><%= @enabled_count %></p>
    </div>
  </div>

  <!-- Schedules List -->
  <% if @schedules.any? %>
    <div class="dm-card overflow-hidden">
      <% @schedules.each_with_index do |schedule, index| %>
        <%= link_to dashboard_project_on_call_schedule_path(@project, schedule), class: "block px-5 py-4 transition-colors dm-surface-hover #{index > 0 ? 'border-t dm-border-light' : ''}" do %>
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
              <!-- Status indicator -->
              <% if schedule.enabled %>
                <span class="w-2 h-2 rounded-full" style="background: var(--color-success-dot);"></span>
              <% else %>
                <span class="w-2 h-2 rounded-full" style="background: var(--color-icon-muted);"></span>
              <% end %>

              <div>
                <div class="flex items-center gap-2">
                  <h3 class="text-[14px] font-medium dm-text"><%= schedule.name %></h3>
                  <span class="px-2 py-0.5 text-[11px] font-medium uppercase rounded-full" style="background: var(--color-border-light); color: var(--color-text-subtle);"><%= schedule.schedule_type %></span>
                </div>
                <p class="text-[13px] mt-0.5 dm-text-muted">
                  <% if schedule.current_on_call.present? %>
                    Currently: <span class="dm-text"><%= schedule.current_on_call %></span>
                  <% else %>
                    No one currently on call
                  <% end %>
                  &middot; <%= schedule.timezone %>
                </p>
              </div>
            </div>
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" style="color: var(--color-icon-muted);">
              <path d="M6 4L10 8L6 12" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="dm-card px-8 py-16 text-center">
      <svg class="mx-auto mb-4" width="48" height="48" viewBox="0 0 48 48" fill="none">
        <rect x="10" y="10" width="28" height="28" rx="2" stroke="currentColor" stroke-width="2" style="color: var(--color-icon-muted);"/>
        <path d="M10 18H38" stroke="currentColor" stroke-width="2" style="color: var(--color-icon-muted);"/>
        <path d="M18 10V14M30 10V14" stroke="currentColor" stroke-width="2" stroke-linecap="round" style="color: var(--color-icon-muted);"/>
      </svg>
      <h3 class="text-[16px] font-medium mb-2 dm-text">No on-call schedules yet</h3>
      <p class="text-[14px] mb-6 dm-text-muted">Create an on-call schedule to manage who receives alerts.</p>
      <%= link_to new_dashboard_project_on_call_schedule_path(@project), class: "inline-block px-4 py-2 text-[13px] font-medium rounded-lg transition-colors dm-btn-primary" do %>
        Create Schedule
      <% end %>
    </div>
  <% end %>
</div>
