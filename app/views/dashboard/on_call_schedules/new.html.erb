<div class="max-w-2xl space-y-6">
  <div class="flex items-center gap-2 mb-1">
    <%= link_to "On-Call Schedules", dashboard_project_on_call_schedules_path(@project), class: "text-[13px]", style: "color: #8B8780;" %>
    <span style="color: #C4C0B8;">/</span>
    <span class="text-[13px]" style="color: #1A1A1A;">New Schedule</span>
  </div>

  <h1 class="text-[24px] font-semibold" style="color: #1A1A1A;">Create On-Call Schedule</h1>

  <div class="rounded-xl px-6 py-6" style="border: 1px solid #E8E5E0; background: #FFFFFE;">
    <%= form_with model: @schedule, url: dashboard_project_on_call_schedules_path(@project), method: :post, class: "space-y-6" do |f| %>
      <!-- Basic Info -->
      <div class="space-y-4">
        <div>
          <%= f.label :name, class: "block text-[13px] font-medium mb-1.5", style: "color: #1A1A1A;" %>
          <%= f.text_field :name, class: "w-full px-3 py-2 rounded-lg text-[14px] outline-none focus:ring-2 focus:ring-orange-500", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;", placeholder: "Engineering On-Call" %>
        </div>

        <div class="grid grid-cols-2 gap-4">
          <div>
            <%= f.label :schedule_type, "Schedule Type", class: "block text-[13px] font-medium mb-1.5", style: "color: #1A1A1A;" %>
            <%= f.select :schedule_type, [['Weekly (fixed per day)', 'weekly'], ['Custom (rotation)', 'custom']], {}, class: "w-full px-3 py-2 rounded-lg text-[14px] outline-none focus:ring-2 focus:ring-orange-500", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;" %>
          </div>
          <div>
            <%= f.label :timezone, class: "block text-[13px] font-medium mb-1.5", style: "color: #1A1A1A;" %>
            <%= f.select :timezone, ActiveSupport::TimeZone.all.map { |tz| [tz.to_s, tz.name] }, { selected: 'UTC' }, class: "w-full px-3 py-2 rounded-lg text-[14px] outline-none focus:ring-2 focus:ring-orange-500", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;" %>
          </div>
        </div>
      </div>

      <!-- Members -->
      <div class="space-y-4 pt-4" style="border-top: 1px solid #F0EFED;">
        <h2 class="text-[15px] font-medium" style="color: #1A1A1A;">Team Members</h2>
        <p class="text-[13px]" style="color: #8B8780;">
          Add team member emails or usernames. Configure the weekly schedule or rotation in the edit view after creating.
        </p>

        <div>
          <%= f.label "members_list", "Members (comma separated)", class: "block text-[13px] font-medium mb-1.5", style: "color: #1A1A1A;" %>
          <%= text_field_tag "members_list", nil, class: "w-full px-3 py-2 rounded-lg text-[14px] outline-none focus:ring-2 focus:ring-orange-500", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;", placeholder: "alice@company.com, bob@company.com, carol@company.com" %>
        </div>
      </div>

      <div class="flex items-center gap-3 pt-4">
        <%= f.submit "Create Schedule", class: "px-4 py-2 text-[13px] font-medium rounded-lg cursor-pointer transition-colors", style: "background: #1A1A1A; color: #FFFFFE;" %>
        <%= link_to "Cancel", dashboard_project_on_call_schedules_path(@project), class: "px-4 py-2 text-[13px] font-medium rounded-lg transition-colors", style: "background: #F0EFED; color: #6B6760;" %>
      </div>
    <% end %>
  </div>
</div>
