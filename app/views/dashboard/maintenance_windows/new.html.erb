<div class="max-w-2xl space-y-6">
  <div class="flex items-center gap-2 mb-1">
    <%= link_to "Maintenance Windows", dashboard_project_maintenance_windows_path(@project), class: "text-[13px] text-muted" %>
    <span class="text-muted">/</span>
    <span class="text-[13px] text-primary">New Window</span>
  </div>

  <h1 class="text-[24px] font-semibold text-primary">Create Maintenance Window</h1>

  <div class="rounded-xl px-6 py-6 border border-theme bg-surface">
    <%= form_with model: @maintenance_window, url: dashboard_project_maintenance_windows_path(@project), method: :post, class: "space-y-6" do |f| %>
      <!-- Basic Info -->
      <div class="space-y-4">
        <div>
          <%= f.label :name, class: "block text-[13px] font-medium mb-1.5 text-primary" %>
          <%= f.text_field :name, class: "w-full px-3 py-2 rounded-lg text-[14px] outline-none focus:ring-2 focus:ring-signal input-theme", placeholder: "Weekly Database Maintenance" %>
        </div>

        <div>
          <%= f.label :description, class: "block text-[13px] font-medium mb-1.5 text-primary" %>
          <%= f.text_area :description, rows: 2, class: "w-full px-3 py-2 rounded-lg text-[14px] outline-none focus:ring-2 focus:ring-signal input-theme", placeholder: "Scheduled maintenance for database backup and cleanup" %>
        </div>
      </div>

      <!-- Time Window -->
      <div class="space-y-4 pt-4 border-t border-light">
        <h2 class="text-[15px] font-medium text-primary">Time Window</h2>

        <div class="grid grid-cols-2 gap-4">
          <div>
            <%= f.label :starts_at, "Start Time", class: "block text-[13px] font-medium mb-1.5 text-primary" %>
            <%= f.datetime_local_field :starts_at, class: "w-full px-3 py-2 rounded-lg text-[14px] outline-none focus:ring-2 focus:ring-signal input-theme" %>
          </div>
          <div>
            <%= f.label :ends_at, "End Time", class: "block text-[13px] font-medium mb-1.5 text-primary" %>
            <%= f.datetime_local_field :ends_at, class: "w-full px-3 py-2 rounded-lg text-[14px] outline-none focus:ring-2 focus:ring-signal input-theme" %>
          </div>
        </div>
      </div>

      <!-- Scope -->
      <div class="space-y-4 pt-4 border-t border-light">
        <h2 class="text-[15px] font-medium text-primary">Scope</h2>
        <p class="text-[13px] text-muted">
          Select which rules to mute during this window. Leave empty to mute all rules.
        </p>

        <% if @rules.any? %>
          <div class="space-y-2 max-h-48 overflow-y-auto rounded-lg px-4 py-3 bg-surface-alt border border-theme">
            <% @rules.each do |rule| %>
              <label class="flex items-center gap-2 cursor-pointer">
                <input type="checkbox" name="maintenance_window[rule_ids][]" value="<%= rule.id %>" class="rounded">
                <span class="text-[13px] text-primary"><%= rule.name %></span>
                <span class="text-[11px] px-1.5 py-0.5 rounded-full" style="background: var(--color-border-light); color: var(--color-text-subtle);"><%= rule.severity %></span>
              </label>
            <% end %>
          </div>
        <% else %>
          <div class="rounded-lg px-4 py-3 bg-surface-alt border border-theme">
            <p class="text-[13px] text-subtle">No rules configured. All future rules will be muted.</p>
          </div>
        <% end %>
      </div>

      <!-- Recurrence -->
      <div class="space-y-4 pt-4 border-t border-light">
        <h2 class="text-[15px] font-medium text-primary">Recurrence</h2>

        <div class="flex items-center gap-2">
          <%= f.check_box :recurring, class: "rounded" %>
          <%= f.label :recurring, "Make this a recurring window", class: "text-[13px] text-primary" %>
        </div>

        <div>
          <%= f.label :recurrence_rule, "Recurrence Pattern", class: "block text-[13px] font-medium mb-1.5 text-primary" %>
          <%= f.text_field :recurrence_rule, class: "w-full px-3 py-2 rounded-lg text-[14px] outline-none focus:ring-2 focus:ring-signal input-theme", placeholder: "FREQ=WEEKLY;BYDAY=SU" %>
          <p class="text-[12px] mt-1 text-muted">iCal RRULE format (e.g., FREQ=WEEKLY;BYDAY=SU for every Sunday)</p>
        </div>
      </div>

      <div class="flex items-center gap-3 pt-4">
        <%= f.submit "Create Window", class: "px-4 py-2 text-[13px] font-medium rounded-lg cursor-pointer transition-colors btn-theme-primary" %>
        <%= link_to "Cancel", dashboard_project_maintenance_windows_path(@project), class: "px-4 py-2 text-[13px] font-medium rounded-lg transition-colors btn-theme-secondary" %>
      </div>
    <% end %>
  </div>
</div>
