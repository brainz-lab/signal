<div class="max-w-2xl space-y-6">
  <div class="flex items-center gap-2 mb-1">
    <%= link_to "Maintenance Windows", dashboard_project_maintenance_windows_path(@project), class: "text-[13px] dm-text-muted" %>
    <span class="dm-text-muted">/</span>
    <%= link_to @maintenance_window.name, dashboard_project_maintenance_window_path(@project, @maintenance_window), class: "text-[13px] dm-text-muted" %>
    <span class="dm-text-muted">/</span>
    <span class="text-[13px] dm-text">Edit</span>
  </div>

  <h1 class="text-[24px] font-semibold dm-text">Edit Maintenance Window</h1>

  <div class="dm-card px-6 py-6">
    <%= form_with model: @maintenance_window, url: dashboard_project_maintenance_window_path(@project, @maintenance_window), method: :patch, class: "space-y-6" do |f| %>
      <!-- Basic Info -->
      <div class="space-y-4">
        <div>
          <%= f.label :name, class: "block text-[13px] font-medium mb-1.5 dm-text" %>
          <%= f.text_field :name, class: "w-full px-3 py-2 rounded-lg text-[14px] outline-none focus:ring-2 dm-input" %>
        </div>

        <div>
          <%= f.label :description, class: "block text-[13px] font-medium mb-1.5 dm-text" %>
          <%= f.text_area :description, rows: 2, class: "w-full px-3 py-2 rounded-lg text-[14px] outline-none focus:ring-2 dm-input" %>
        </div>

        <div class="flex items-center gap-2">
          <%= f.check_box :active, class: "rounded" %>
          <%= f.label :active, "Active", class: "text-[13px] dm-text" %>
        </div>
      </div>

      <!-- Time Window -->
      <div class="space-y-4 pt-4 border-t dm-border-light">
        <h2 class="text-[15px] font-medium dm-text">Time Window</h2>

        <div class="grid grid-cols-2 gap-4">
          <div>
            <%= f.label :starts_at, "Start Time", class: "block text-[13px] font-medium mb-1.5 dm-text" %>
            <%= f.datetime_local_field :starts_at, class: "w-full px-3 py-2 rounded-lg text-[14px] outline-none focus:ring-2 dm-input" %>
          </div>
          <div>
            <%= f.label :ends_at, "End Time", class: "block text-[13px] font-medium mb-1.5 dm-text" %>
            <%= f.datetime_local_field :ends_at, class: "w-full px-3 py-2 rounded-lg text-[14px] outline-none focus:ring-2 dm-input" %>
          </div>
        </div>
      </div>

      <!-- Scope -->
      <div class="space-y-4 pt-4 border-t dm-border-light">
        <h2 class="text-[15px] font-medium dm-text">Scope</h2>
        <p class="text-[13px] dm-text-muted">
          Select which rules to mute during this window. Leave empty to mute all rules.
        </p>

        <% if @rules.any? %>
          <div class="space-y-2 max-h-48 overflow-y-auto rounded-lg px-4 py-3 bg-surface-alt border dm-border">
            <% @rules.each do |rule| %>
              <label class="flex items-center gap-2 cursor-pointer">
                <input type="checkbox" name="maintenance_window[rule_ids][]" value="<%= rule.id %>"
                       <%= 'checked' if @maintenance_window.rule_ids&.include?(rule.id.to_s) %>
                       class="rounded">
                <span class="text-[13px] dm-text"><%= rule.name %></span>
                <span class="text-[11px] px-1.5 py-0.5 rounded-full" style="background: var(--color-border-light); color: var(--color-text-subtle);"><%= rule.severity %></span>
              </label>
            <% end %>
          </div>
        <% else %>
          <div class="rounded-lg px-4 py-3 bg-surface-alt border dm-border">
            <p class="text-[13px] dm-text-placeholder">No rules configured. All rules will be muted.</p>
          </div>
        <% end %>
      </div>

      <!-- Services -->
      <div class="space-y-4 pt-4 border-t dm-border-light">
        <h2 class="text-[15px] font-medium dm-text">Services</h2>

        <div>
          <%= f.label "services_list", "Services (comma separated)", class: "block text-[13px] font-medium mb-1.5 dm-text" %>
          <%= text_field_tag "services_list", @maintenance_window.services&.join(', '), name: "maintenance_window[services][]", class: "w-full px-3 py-2 rounded-lg text-[14px] outline-none focus:ring-2 dm-input", placeholder: "api-gateway, database, cache" %>
          <p class="text-[12px] mt-1 dm-text-muted">Optional: specify affected service names</p>
        </div>
      </div>

      <!-- Recurrence -->
      <div class="space-y-4 pt-4 border-t dm-border-light">
        <h2 class="text-[15px] font-medium dm-text">Recurrence</h2>

        <div class="flex items-center gap-2">
          <%= f.check_box :recurring, class: "rounded" %>
          <%= f.label :recurring, "Make this a recurring window", class: "text-[13px] dm-text" %>
        </div>

        <div>
          <%= f.label :recurrence_rule, "Recurrence Pattern", class: "block text-[13px] font-medium mb-1.5 dm-text" %>
          <%= f.text_field :recurrence_rule, class: "w-full px-3 py-2 rounded-lg text-[14px] outline-none focus:ring-2 dm-input", placeholder: "FREQ=WEEKLY;BYDAY=SU" %>
          <p class="text-[12px] mt-1 dm-text-muted">iCal RRULE format (e.g., FREQ=WEEKLY;BYDAY=SU for every Sunday)</p>
        </div>
      </div>

      <div class="flex items-center gap-3 pt-4">
        <%= f.submit "Save Changes", class: "px-4 py-2 text-[13px] font-medium rounded-lg cursor-pointer transition-colors dm-btn-primary" %>
        <%= link_to "Cancel", dashboard_project_maintenance_window_path(@project, @maintenance_window), class: "px-4 py-2 text-[13px] font-medium rounded-lg transition-colors dm-btn-secondary" %>
      </div>
    <% end %>
  </div>

  <!-- Danger Zone -->
  <div class="rounded-xl px-6 py-6 bg-danger-zone border-danger-zone">
    <h2 class="text-[16px] font-medium mb-2 text-danger-zone">Danger Zone</h2>
    <p class="text-[13px] mb-4 text-danger-zone">Deleting this window will re-enable alerts for affected rules.</p>
    <%= button_to "Delete Window", dashboard_project_maintenance_window_path(@project, @maintenance_window), method: :delete, data: { confirm: "Are you sure? This cannot be undone." }, class: "px-4 py-2 text-[13px] font-medium rounded-lg cursor-pointer transition-colors btn-danger" %>
  </div>
</div>
