<div class="max-w-2xl space-y-6">
  <div class="flex items-center gap-2 mb-1">
    <%= link_to "Maintenance Windows", dashboard_project_maintenance_windows_path(@project), class: "text-[13px]", style: "color: #8B8780;" %>
    <span style="color: #C4C0B8;">/</span>
    <%= link_to @maintenance_window.name, dashboard_project_maintenance_window_path(@project, @maintenance_window), class: "text-[13px]", style: "color: #8B8780;" %>
    <span style="color: #C4C0B8;">/</span>
    <span class="text-[13px]" style="color: #1A1A1A;">Edit</span>
  </div>

  <h1 class="text-[24px] font-semibold" style="color: #1A1A1A;">Edit Maintenance Window</h1>

  <div class="rounded-xl px-6 py-6" style="border: 1px solid #E8E5E0; background: #FFFFFE;">
    <%= form_with model: @maintenance_window, url: dashboard_project_maintenance_window_path(@project, @maintenance_window), method: :patch, class: "space-y-6" do |f| %>
      <!-- Basic Info -->
      <div class="space-y-4">
        <div>
          <%= f.label :name, class: "block text-[13px] font-medium mb-1.5", style: "color: #1A1A1A;" %>
          <%= f.text_field :name, class: "w-full px-3 py-2 rounded-lg text-[14px] outline-none focus:ring-2 focus:ring-orange-500", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;" %>
        </div>

        <div>
          <%= f.label :description, class: "block text-[13px] font-medium mb-1.5", style: "color: #1A1A1A;" %>
          <%= f.text_area :description, rows: 2, class: "w-full px-3 py-2 rounded-lg text-[14px] outline-none focus:ring-2 focus:ring-orange-500", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;" %>
        </div>

        <div class="flex items-center gap-2">
          <%= f.check_box :active, class: "rounded" %>
          <%= f.label :active, "Active", class: "text-[13px]", style: "color: #1A1A1A;" %>
        </div>
      </div>

      <!-- Time Window -->
      <div class="space-y-4 pt-4" style="border-top: 1px solid #F0EFED;">
        <h2 class="text-[15px] font-medium" style="color: #1A1A1A;">Time Window</h2>

        <div class="grid grid-cols-2 gap-4">
          <div>
            <%= f.label :starts_at, "Start Time", class: "block text-[13px] font-medium mb-1.5", style: "color: #1A1A1A;" %>
            <%= f.datetime_local_field :starts_at, class: "w-full px-3 py-2 rounded-lg text-[14px] outline-none focus:ring-2 focus:ring-orange-500", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;" %>
          </div>
          <div>
            <%= f.label :ends_at, "End Time", class: "block text-[13px] font-medium mb-1.5", style: "color: #1A1A1A;" %>
            <%= f.datetime_local_field :ends_at, class: "w-full px-3 py-2 rounded-lg text-[14px] outline-none focus:ring-2 focus:ring-orange-500", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;" %>
          </div>
        </div>
      </div>

      <!-- Scope -->
      <div class="space-y-4 pt-4" style="border-top: 1px solid #F0EFED;">
        <h2 class="text-[15px] font-medium" style="color: #1A1A1A;">Scope</h2>
        <p class="text-[13px]" style="color: #8B8780;">
          Select which rules to mute during this window. Leave empty to mute all rules.
        </p>

        <% if @rules.any? %>
          <div class="space-y-2 max-h-48 overflow-y-auto rounded-lg px-4 py-3" style="background: #F9FAFB; border: 1px solid #E8E5E0;">
            <% @rules.each do |rule| %>
              <label class="flex items-center gap-2 cursor-pointer">
                <input type="checkbox" name="maintenance_window[rule_ids][]" value="<%= rule.id %>"
                       <%= 'checked' if @maintenance_window.rule_ids&.include?(rule.id.to_s) %>
                       class="rounded">
                <span class="text-[13px]" style="color: #1A1A1A;"><%= rule.name %></span>
                <span class="text-[11px] px-1.5 py-0.5 rounded-full" style="background: #F0EFED; color: #6B6760;"><%= rule.severity %></span>
              </label>
            <% end %>
          </div>
        <% else %>
          <div class="rounded-lg px-4 py-3" style="background: #F9FAFB; border: 1px solid #E8E5E0;">
            <p class="text-[13px]" style="color: #6B6760;">No rules configured. All rules will be muted.</p>
          </div>
        <% end %>
      </div>

      <!-- Services -->
      <div class="space-y-4 pt-4" style="border-top: 1px solid #F0EFED;">
        <h2 class="text-[15px] font-medium" style="color: #1A1A1A;">Services</h2>

        <div>
          <%= f.label "services_list", "Services (comma separated)", class: "block text-[13px] font-medium mb-1.5", style: "color: #1A1A1A;" %>
          <%= text_field_tag "services_list", @maintenance_window.services&.join(', '), name: "maintenance_window[services][]", class: "w-full px-3 py-2 rounded-lg text-[14px] outline-none focus:ring-2 focus:ring-orange-500", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;", placeholder: "api-gateway, database, cache" %>
          <p class="text-[12px] mt-1" style="color: #8B8780;">Optional: specify affected service names</p>
        </div>
      </div>

      <!-- Recurrence -->
      <div class="space-y-4 pt-4" style="border-top: 1px solid #F0EFED;">
        <h2 class="text-[15px] font-medium" style="color: #1A1A1A;">Recurrence</h2>

        <div class="flex items-center gap-2">
          <%= f.check_box :recurring, class: "rounded" %>
          <%= f.label :recurring, "Make this a recurring window", class: "text-[13px]", style: "color: #1A1A1A;" %>
        </div>

        <div>
          <%= f.label :recurrence_rule, "Recurrence Pattern", class: "block text-[13px] font-medium mb-1.5", style: "color: #1A1A1A;" %>
          <%= f.text_field :recurrence_rule, class: "w-full px-3 py-2 rounded-lg text-[14px] outline-none focus:ring-2 focus:ring-orange-500", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;", placeholder: "FREQ=WEEKLY;BYDAY=SU" %>
          <p class="text-[12px] mt-1" style="color: #8B8780;">iCal RRULE format (e.g., FREQ=WEEKLY;BYDAY=SU for every Sunday)</p>
        </div>
      </div>

      <div class="flex items-center gap-3 pt-4">
        <%= f.submit "Save Changes", class: "px-4 py-2 text-[13px] font-medium rounded-lg cursor-pointer transition-colors", style: "background: #1A1A1A; color: #FFFFFE;" %>
        <%= link_to "Cancel", dashboard_project_maintenance_window_path(@project, @maintenance_window), class: "px-4 py-2 text-[13px] font-medium rounded-lg transition-colors", style: "background: #F0EFED; color: #6B6760;" %>
      </div>
    <% end %>
  </div>

  <!-- Danger Zone -->
  <div class="rounded-xl px-6 py-6" style="border: 1px solid #FECACA; background: #FEF2F2;">
    <h2 class="text-[16px] font-medium mb-2" style="color: #991B1B;">Danger Zone</h2>
    <p class="text-[13px] mb-4" style="color: #991B1B;">Deleting this window will re-enable alerts for affected rules.</p>
    <%= button_to "Delete Window", dashboard_project_maintenance_window_path(@project, @maintenance_window), method: :delete, data: { confirm: "Are you sure? This cannot be undone." }, class: "px-4 py-2 text-[13px] font-medium rounded-lg cursor-pointer transition-colors", style: "background: #DC2626; color: #FFFFFE;" %>
  </div>
</div>
