<div class="max-w-md mx-auto mt-16">
  <div class="text-center mb-8">
    <div class="inline-flex items-center justify-center w-12 h-12 rounded-xl mb-4" style="background: #FEF3E7;">
      <svg width="24" height="24" viewBox="0 0 20 20" fill="none">
        <path d="M10 2L2 10L10 18L18 10L10 2Z" fill="#F97316"/>
        <circle cx="10" cy="10" r="3" fill="#FFFFFE"/>
      </svg>
    </div>
    <h1 class="text-[22px] font-semibold tracking-tight" style="color: #1A1A1A;">
      <%= Rails.env.development? ? 'Create a Project' : 'Connect a Project' %>
    </h1>
    <p class="mt-2 text-[15px]" style="color: #6B6760;">
      <%= Rails.env.development? ? 'Create a new project to start monitoring alerts' : 'Enter your API key to start monitoring alerts' %>
    </p>
  </div>

  <% if flash[:alert] %>
    <div class="mb-6 px-4 py-3 rounded-lg text-[14px]" style="background: #FEE8E8; color: #8B2D2D;">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <% if Rails.env.development? %>
    <%= form_with model: @project, url: dashboard_projects_path, method: :post, class: "space-y-6" do |f| %>
      <div>
        <label for="project_name" class="block text-[14px] font-medium mb-2" style="color: #1A1A1A;">Project Name</label>
        <input type="text" name="project[name]" id="project_name"
               value="<%= @project.name %>"
               placeholder="My App"
               autocomplete="off"
               class="w-full px-4 py-3 rounded-lg text-[15px] transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2"
               style="background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A; --tw-ring-color: #F97316;">
      </div>

      <div>
        <label for="project_environment" class="block text-[14px] font-medium mb-2" style="color: #1A1A1A;">Environment</label>
        <select name="project[environment]" id="project_environment"
                class="w-full px-4 py-3 rounded-lg text-[15px] transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2"
                style="background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A; --tw-ring-color: #F97316;">
          <option value="development" <%= 'selected' if @project.environment == 'development' %>>Development</option>
          <option value="staging" <%= 'selected' if @project.environment == 'staging' %>>Staging</option>
          <option value="production" <%= 'selected' if @project.environment == 'production' %>>Production</option>
        </select>
      </div>

      <button type="submit"
              class="w-full px-4 py-3 text-[15px] font-medium rounded-lg transition-colors hover:opacity-90"
              style="background: #1A1A1A; color: #FFFFFE;">
        Create Project
      </button>
    <% end %>
  <% else %>
    <%= form_with url: dashboard_projects_path, method: :post, class: "space-y-6" do |f| %>
      <div>
        <label for="api_key" class="block text-[14px] font-medium mb-2" style="color: #1A1A1A;">API Key</label>
        <input type="text" name="api_key" id="api_key"
               placeholder="sig_..."
               autocomplete="off"
               class="w-full px-4 py-3 rounded-lg text-[15px] transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2"
               style="background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A; --tw-ring-color: #F97316;">
        <p class="mt-2 text-[13px]" style="color: #8B8780;">
          Get your API key from the
          <a href="https://platform.brainzlab.ai" target="_blank" class="underline hover:opacity-70" style="color: #F97316;">Brainz Lab Platform</a>
        </p>
      </div>

      <button type="submit"
              class="w-full px-4 py-3 text-[15px] font-medium rounded-lg transition-colors hover:opacity-90"
              style="background: #1A1A1A; color: #FFFFFE;">
        Connect Project
      </button>
    <% end %>

    <div class="mt-8 pt-8 text-center" style="border-top: 1px solid #E8E5E0;">
      <p class="text-[13px]" style="color: #8B8780;">
        Don't have an account?
        <a href="https://platform.brainzlab.ai/signup" target="_blank" class="underline hover:opacity-70" style="color: #F97316;">Sign up for free</a>
      </p>
    </div>
  <% end %>
</div>
