<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-[24px] font-semibold tracking-tight text-primary">Projects</h1>
      <p class="text-[14px] mt-1 text-muted">Manage your monitoring projects and configurations</p>
    </div>
    <% unless Rails.env.production? %>
      <%= link_to new_dashboard_project_path, class: "inline-flex items-center gap-2 px-4 py-2.5 text-[13px] font-medium rounded-xl transition-all btn-primary text-white" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        New Project
      <% end %>
    <% end %>
  </div>

  <% if @projects.any? %>
    <div class="rounded-2xl overflow-hidden shadow-card border border-theme bg-surface">
      <% @projects.each_with_index do |project, index| %>
        <%= link_to dashboard_project_alerts_path(project), class: "block px-5 py-4 transition-all card-hover group #{index > 0 ? 'border-t border-light' : ''}" do %>
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-4">
              <div class="w-10 h-10 rounded-xl flex items-center justify-center text-sm font-semibold shadow-sm" style="background: var(--gradient-warning); color: var(--color-signal);">
                <%= project.name.first.upcase %>
              </div>
              <div>
                <h3 class="text-[15px] font-medium group-hover:text-signal transition-colors text-primary"><%= project.name %></h3>
                <p class="text-[13px] mt-0.5 text-muted">
                  <span class="inline-flex items-center gap-1">
                    <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/></svg>
                    <%= project.alert_rules.count %> rules
                  </span>
                  <% firing_count = project.alerts.where(state: 'firing').count %>
                  <% if firing_count > 0 %>
                    <span class="inline-flex items-center gap-1 ml-2 px-2 py-0.5 rounded-full text-[11px] font-medium bg-error text-error">
                      <span class="w-1.5 h-1.5 rounded-full animate-pulse" style="background: var(--color-error-dot);"></span>
                      <%= firing_count %> firing
                    </span>
                  <% else %>
                    <span class="inline-flex items-center gap-1 ml-2 px-2 py-0.5 rounded-full text-[11px] font-medium bg-success text-success">
                      All clear
                    </span>
                  <% end %>
                </p>
              </div>
            </div>
            <svg class="w-5 h-5 transition-transform group-hover:translate-x-1" style="color: var(--color-icon-muted);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5l7 7-7 7"/>
            </svg>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="rounded-2xl px-8 py-16 text-center shadow-card border border-theme bg-surface">
      <div class="w-16 h-16 mx-auto mb-5 rounded-2xl flex items-center justify-center" style="background: var(--gradient-warning);">
        <svg class="w-8 h-8 text-warning" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
        </svg>
      </div>
      <h3 class="text-[18px] font-semibold mb-2 text-primary">No projects yet</h3>
      <% if Rails.env.production? %>
        <p class="text-[14px] mb-6 max-w-sm mx-auto text-muted">Create a project in Platform to get started.</p>
        <%= link_to "Go to Platform", ENV.fetch("BRAINZLAB_PLATFORM_EXTERNAL_URL", "https://platform.brainzlab.ai"), class: "inline-flex items-center gap-2 px-5 py-2.5 text-[14px] font-medium rounded-xl transition-all btn-primary text-white", target: "_blank" %>
      <% else %>
        <p class="text-[14px] mb-6 max-w-sm mx-auto text-muted">Create your first project to start monitoring alerts and incidents.</p>
        <%= link_to new_dashboard_project_path, class: "inline-flex items-center gap-2 px-5 py-2.5 text-[14px] font-medium rounded-xl transition-all btn-primary text-white" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Create Project
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
