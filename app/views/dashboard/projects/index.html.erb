<div class="space-y-6">
  <div class="flex items-center justify-between">
    <h1 class="text-[24px] font-semibold" style="color: #1A1A1A;">Projects</h1>
    <%= link_to new_dashboard_project_path, class: "px-4 py-2 text-[13px] font-medium rounded-lg transition-colors", style: "background: #1A1A1A; color: #FFFFFE;" do %>
      New Project
    <% end %>
  </div>

  <% if @projects.any? %>
    <div class="rounded-xl overflow-hidden" style="border: 1px solid #E8E5E0; background: #FFFFFE;">
      <% @projects.each_with_index do |project, index| %>
        <%= link_to dashboard_project_alerts_path(project), class: "block px-5 py-4 transition-colors hover:bg-gray-50", style: index > 0 ? "border-top: 1px solid #F0EFED;" : "" do %>
          <div class="flex items-center justify-between">
            <div>
              <h3 class="text-[15px] font-medium" style="color: #1A1A1A;"><%= project.name %></h3>
              <p class="text-[13px] mt-0.5" style="color: #8B8780;">
                <%= project.alert_rules.count %> rules &middot;
                <%= project.alerts.where(state: 'firing').count %> firing
              </p>
            </div>
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" style="color: #C4C0B8;">
              <path d="M6 4L10 8L6 12" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="rounded-xl px-8 py-16 text-center" style="border: 1px solid #E8E5E0; background: #FFFFFE;">
      <svg class="mx-auto mb-4" width="48" height="48" viewBox="0 0 48 48" fill="none">
        <rect x="8" y="8" width="32" height="32" rx="4" stroke="#C4C0B8" stroke-width="2"/>
        <path d="M24 18V30M18 24H30" stroke="#C4C0B8" stroke-width="2" stroke-linecap="round"/>
      </svg>
      <h3 class="text-[16px] font-medium mb-2" style="color: #1A1A1A;">No projects yet</h3>
      <p class="text-[14px] mb-6" style="color: #8B8780;">Create your first project to start monitoring alerts.</p>
      <%= link_to new_dashboard_project_path, class: "inline-block px-4 py-2 text-[13px] font-medium rounded-lg transition-colors", style: "background: #1A1A1A; color: #FFFFFE;" do %>
        Create Project
      <% end %>
    </div>
  <% end %>
</div>
