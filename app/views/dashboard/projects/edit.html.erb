<div class="max-w-lg space-y-6">
  <h1 class="text-[24px] font-semibold" style="color: #1A1A1A;">Project Settings</h1>

  <div class="rounded-xl px-6 py-6" style="border: 1px solid #E8E5E0; background: #FFFFFE;">
    <h2 class="text-[16px] font-medium mb-4" style="color: #1A1A1A;">General</h2>
    <%= form_with model: @project, url: dashboard_project_path(@project), method: :patch, class: "space-y-5" do |f| %>
      <div>
        <%= f.label :name, class: "block text-[13px] font-medium mb-1.5", style: "color: #1A1A1A;" %>
        <%= f.text_field :name, class: "w-full px-3 py-2 rounded-lg text-[14px] outline-none focus:ring-2 focus:ring-orange-500", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;" %>
      </div>

      <div>
        <%= f.label :platform_project_id, "Platform Project ID", class: "block text-[13px] font-medium mb-1.5", style: "color: #1A1A1A;" %>
        <%= f.text_field :platform_project_id, class: "w-full px-3 py-2 rounded-lg text-[14px] outline-none focus:ring-2 focus:ring-orange-500", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;" %>
      </div>

      <div class="pt-2">
        <%= f.submit "Save Changes", class: "px-4 py-2 text-[13px] font-medium rounded-lg cursor-pointer transition-colors", style: "background: #1A1A1A; color: #FFFFFE;" %>
      </div>
    <% end %>
  </div>

  <div class="rounded-xl px-6 py-6" style="border: 1px solid #FECACA; background: #FEF2F2;">
    <h2 class="text-[16px] font-medium mb-2" style="color: #991B1B;">Danger Zone</h2>
    <p class="text-[13px] mb-4" style="color: #991B1B;">Deleting this project will remove all alerts, rules, and channels.</p>
    <%= button_to "Delete Project", dashboard_project_path(@project), method: :delete, data: { confirm: "Are you sure? This cannot be undone." }, class: "px-4 py-2 text-[13px] font-medium rounded-lg cursor-pointer transition-colors", style: "background: #DC2626; color: #FFFFFE;" %>
  </div>
</div>
