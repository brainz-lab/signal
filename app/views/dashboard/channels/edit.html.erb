<div class="max-w-2xl space-y-6">
  <div class="flex items-center gap-2 mb-1">
    <%= link_to "Channels", dashboard_project_channels_path(@project), class: "text-[13px]", style: "color: #8B8780;" %>
    <span style="color: #C4C0B8;">/</span>
    <%= link_to @channel.name, dashboard_project_channel_path(@project, @channel), class: "text-[13px]", style: "color: #8B8780;" %>
    <span style="color: #C4C0B8;">/</span>
    <span class="text-[13px]" style="color: #1A1A1A;">Edit</span>
  </div>

  <h1 class="text-[24px] font-semibold" style="color: #1A1A1A;">Edit Channel</h1>

  <div class="rounded-xl px-6 py-6" style="border: 1px solid #E8E5E0; background: #FFFFFE;">
    <%= form_with model: @channel, url: dashboard_project_channel_path(@project, @channel), method: :patch, class: "space-y-6" do |f| %>
      <!-- Basic Info -->
      <div class="space-y-4">
        <div>
          <%= f.label :name, class: "block text-[13px] font-medium mb-1.5", style: "color: #1A1A1A;" %>
          <%= f.text_field :name, class: "w-full px-3 py-2 rounded-lg text-[14px] outline-none focus:ring-2 focus:ring-orange-500", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;" %>
        </div>

        <div>
          <%= f.label :channel_type, "Type", class: "block text-[13px] font-medium mb-1.5", style: "color: #1A1A1A;" %>
          <%= f.select :channel_type, [
            ['Slack', 'slack'],
            ['PagerDuty', 'pagerduty'],
            ['Email', 'email'],
            ['Webhook', 'webhook'],
            ['Discord', 'discord'],
            ['Microsoft Teams', 'teams'],
            ['Opsgenie', 'opsgenie']
          ], {}, class: "w-full px-3 py-2 rounded-lg text-[14px] outline-none focus:ring-2 focus:ring-orange-500", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;" %>
        </div>

        <div class="flex items-center gap-2">
          <%= f.check_box :enabled, class: "rounded" %>
          <%= f.label :enabled, "Enabled", class: "text-[13px]", style: "color: #1A1A1A;" %>
        </div>
      </div>

      <!-- Configuration -->
      <div class="space-y-4 pt-4" style="border-top: 1px solid #F0EFED;">
        <h2 class="text-[15px] font-medium" style="color: #1A1A1A;">Configuration</h2>

        <div>
          <%= f.label "config[webhook_url]", "Webhook URL", class: "block text-[13px] font-medium mb-1.5", style: "color: #1A1A1A;" %>
          <%= f.text_field "config[webhook_url]", value: @channel.config&.dig('webhook_url'), class: "w-full px-3 py-2 rounded-lg text-[14px] outline-none focus:ring-2 focus:ring-orange-500", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;" %>
        </div>

        <% if @channel.channel_type == 'pagerduty' %>
          <div>
            <%= f.label "config[routing_key]", "Routing Key", class: "block text-[13px] font-medium mb-1.5", style: "color: #1A1A1A;" %>
            <%= f.text_field "config[routing_key]", value: @channel.config&.dig('routing_key'), class: "w-full px-3 py-2 rounded-lg text-[14px] outline-none focus:ring-2 focus:ring-orange-500", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;" %>
          </div>
        <% end %>

        <% if @channel.channel_type == 'email' %>
          <div>
            <%= f.label "config[recipients]", "Recipients (comma separated)", class: "block text-[13px] font-medium mb-1.5", style: "color: #1A1A1A;" %>
            <%= f.text_field "config[recipients]", value: @channel.config&.dig('recipients')&.join(', '), class: "w-full px-3 py-2 rounded-lg text-[14px] outline-none focus:ring-2 focus:ring-orange-500", style: "background: #FFFFFE; border: 1px solid #E8E5E0; color: #1A1A1A;" %>
          </div>
        <% end %>
      </div>

      <div class="flex items-center gap-3 pt-4">
        <%= f.submit "Save Changes", class: "px-4 py-2 text-[13px] font-medium rounded-lg cursor-pointer transition-colors", style: "background: #1A1A1A; color: #FFFFFE;" %>
        <%= link_to "Cancel", dashboard_project_channel_path(@project, @channel), class: "px-4 py-2 text-[13px] font-medium rounded-lg transition-colors", style: "background: #F0EFED; color: #6B6760;" %>
      </div>
    <% end %>
  </div>

  <!-- Danger Zone -->
  <div class="rounded-xl px-6 py-6" style="border: 1px solid #FECACA; background: #FEF2F2;">
    <h2 class="text-[16px] font-medium mb-2" style="color: #991B1B;">Danger Zone</h2>
    <p class="text-[13px] mb-4" style="color: #991B1B;">Deleting this channel will remove it from all rules.</p>
    <%= button_to "Delete Channel", dashboard_project_channel_path(@project, @channel), method: :delete, data: { confirm: "Are you sure? This cannot be undone." }, class: "px-4 py-2 text-[13px] font-medium rounded-lg cursor-pointer transition-colors", style: "background: #DC2626; color: #FFFFFE;" %>
  </div>
</div>
