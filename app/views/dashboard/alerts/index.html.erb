<div class="space-y-6">
  <!-- Header -->
  <div>
    <h1 class="text-[24px] font-semibold tracking-tight" style="color: #1A1A1A;">Alerts</h1>
    <p class="text-[14px] mt-1" style="color: #8B8780;">Monitor and manage active alerts across your project</p>
  </div>

  <!-- Stats -->
  <div class="grid grid-cols-3 gap-4">
    <div class="rounded-2xl px-5 py-5 shadow-card transition-all hover:shadow-medium" style="border: 1px solid #E8E5E0; background: linear-gradient(135deg, #FFFFFF 0%, #FEF2F2 100%);">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-xl flex items-center justify-center" style="background: rgba(220, 38, 38, 0.1);">
          <svg class="w-5 h-5" style="color: #DC2626;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
          </svg>
        </div>
        <div>
          <p class="text-[11px] font-semibold uppercase tracking-wider" style="color: #8B8780;">Firing</p>
          <p class="text-[28px] font-bold leading-none mt-1" style="color: #DC2626;"><%= @firing_count %></p>
        </div>
      </div>
    </div>
    <div class="rounded-2xl px-5 py-5 shadow-card transition-all hover:shadow-medium" style="border: 1px solid #E8E5E0; background: linear-gradient(135deg, #FFFFFF 0%, #FEF7ED 100%);">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-xl flex items-center justify-center" style="background: rgba(217, 119, 6, 0.1);">
          <svg class="w-5 h-5" style="color: #D97706;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div>
          <p class="text-[11px] font-semibold uppercase tracking-wider" style="color: #8B8780;">Pending</p>
          <p class="text-[28px] font-bold leading-none mt-1" style="color: #D97706;"><%= @pending_count %></p>
        </div>
      </div>
    </div>
    <div class="rounded-2xl px-5 py-5 shadow-card transition-all hover:shadow-medium" style="border: 1px solid #E8E5E0; background: linear-gradient(135deg, #FFFFFF 0%, #F0FDF4 100%);">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-xl flex items-center justify-center" style="background: rgba(22, 163, 74, 0.1);">
          <svg class="w-5 h-5" style="color: #16A34A;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div>
          <p class="text-[11px] font-semibold uppercase tracking-wider" style="color: #8B8780;">Resolved Today</p>
          <p class="text-[28px] font-bold leading-none mt-1" style="color: #16A34A;"><%= @resolved_today %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Filters -->
  <div class="flex items-center gap-2 p-1 rounded-xl w-fit" style="background: #F5F3EF;">
    <%= link_to "All", dashboard_project_alerts_path(@project), class: "px-4 py-2 text-[13px] font-medium rounded-lg transition-all #{params[:state].blank? ? 'shadow-sm' : 'hover:bg-cream-200'}", style: params[:state].blank? ? "background: #FFFFFF; color: #1A1A1A;" : "color: #6B6760;" %>
    <%= link_to "Firing", dashboard_project_alerts_path(@project, state: 'firing'), class: "px-4 py-2 text-[13px] font-medium rounded-lg transition-all #{params[:state] == 'firing' ? 'shadow-sm' : 'hover:bg-cream-200'}", style: params[:state] == 'firing' ? "background: #FFFFFF; color: #DC2626;" : "color: #6B6760;" %>
    <%= link_to "Pending", dashboard_project_alerts_path(@project, state: 'pending'), class: "px-4 py-2 text-[13px] font-medium rounded-lg transition-all #{params[:state] == 'pending' ? 'shadow-sm' : 'hover:bg-cream-200'}", style: params[:state] == 'pending' ? "background: #FFFFFF; color: #D97706;" : "color: #6B6760;" %>
    <%= link_to "Resolved", dashboard_project_alerts_path(@project, state: 'resolved'), class: "px-4 py-2 text-[13px] font-medium rounded-lg transition-all #{params[:state] == 'resolved' ? 'shadow-sm' : 'hover:bg-cream-200'}", style: params[:state] == 'resolved' ? "background: #FFFFFF; color: #16A34A;" : "color: #6B6760;" %>
  </div>

  <!-- Alerts List -->
  <% if @alerts.any? %>
    <div class="rounded-2xl overflow-hidden shadow-card" style="border: 1px solid #E8E5E0; background: #FFFFFF;">
      <% @alerts.each_with_index do |alert, index| %>
        <%= link_to dashboard_project_alert_path(@project, alert), class: "block px-5 py-4 transition-all card-hover group", style: index > 0 ? "border-top: 1px solid #F0EFED;" : "" do %>
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-4">
              <!-- State indicator -->
              <% case alert.state %>
              <% when 'firing' %>
                <div class="w-10 h-10 rounded-xl flex items-center justify-center" style="background: rgba(220, 38, 38, 0.1);">
                  <span class="w-3 h-3 rounded-full animate-pulse" style="background: #DC2626;"></span>
                </div>
              <% when 'pending' %>
                <div class="w-10 h-10 rounded-xl flex items-center justify-center" style="background: rgba(217, 119, 6, 0.1);">
                  <span class="w-3 h-3 rounded-full" style="background: #D97706;"></span>
                </div>
              <% else %>
                <div class="w-10 h-10 rounded-xl flex items-center justify-center" style="background: rgba(22, 163, 74, 0.1);">
                  <span class="w-3 h-3 rounded-full" style="background: #16A34A;"></span>
                </div>
              <% end %>

              <div>
                <div class="flex items-center gap-2">
                  <h3 class="text-[14px] font-medium group-hover:text-signal transition-colors" style="color: #1A1A1A;"><%= alert.alert_rule&.name || 'Unknown Rule' %></h3>
                  <!-- Severity badge -->
                  <% case alert.alert_rule&.severity %>
                  <% when 'critical' %>
                    <span class="px-2 py-0.5 text-[10px] font-semibold uppercase rounded-full" style="background: #FEE2E2; color: #991B1B;">Critical</span>
                  <% when 'warning' %>
                    <span class="px-2 py-0.5 text-[10px] font-semibold uppercase rounded-full" style="background: #FEF3C7; color: #92400E;">Warning</span>
                  <% else %>
                    <span class="px-2 py-0.5 text-[10px] font-semibold uppercase rounded-full" style="background: #EDE9FE; color: #5B21B6;">Info</span>
                  <% end %>
                </div>
                <p class="text-[13px] mt-1 flex items-center gap-2" style="color: #8B8780;">
                  <span class="inline-flex items-center gap-1">
                    <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"/></svg>
                    <%= alert.current_value %>
                  </span>
                  <span class="inline-flex items-center gap-1">
                    <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                    <%= time_ago_in_words(alert.started_at) %> ago
                  </span>
                  <% if alert.acknowledged %>
                    <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded-full text-[10px] font-medium" style="background: #DCFCE7; color: #16A34A;">
                      <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                      Ack
                    </span>
                  <% end %>
                </p>
              </div>
            </div>
            <svg class="w-5 h-5 transition-transform group-hover:translate-x-1" style="color: #C4C0B8;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5l7 7-7 7"/>
            </svg>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="rounded-2xl px-8 py-16 text-center shadow-card" style="border: 1px solid #E8E5E0; background: #FFFFFF;">
      <div class="w-16 h-16 mx-auto mb-5 rounded-2xl flex items-center justify-center" style="background: linear-gradient(135deg, #DCFCE7 0%, #D1FAE5 100%);">
        <svg class="w-8 h-8" style="color: #16A34A;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
      <h3 class="text-[18px] font-semibold mb-2" style="color: #1A1A1A;">All clear</h3>
      <p class="text-[14px]" style="color: #8B8780;">No alerts matching your filters.</p>
    </div>
  <% end %>
</div>
