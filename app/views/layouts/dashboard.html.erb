<!DOCTYPE html>
<html lang="en" class="h-full" data-controller="dark-mode">
<head>
  <title>Signal - <%= content_for(:title) || "Alerting & Incidents" %></title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%# Fonts %>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&family=Source+Serif+4:opsz,wght@8..60,400;8..60,500;8..60,600;8..60,700&display=swap" rel="stylesheet">

  <%# BrainzLab UI Design System %>
  <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag "dark_mode", "data-turbo-track": "reload" %>

  <%# Prevent flash of wrong theme on page load and provide toggle function %>
  <script>
    (function() {
      const savedTheme = localStorage.getItem('brainzlab-theme');
      const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
      if (savedTheme === 'dark' || (!savedTheme && systemPrefersDark)) {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.add('light');
      }

      // Vanilla JS dark mode toggle - works without Stimulus
      window.toggleDarkMode = function() {
        const html = document.documentElement;
        const isDark = html.classList.contains('dark');
        if (isDark) {
          html.classList.remove('dark');
          html.classList.add('light');
          localStorage.setItem('brainzlab-theme', 'light');
        } else {
          html.classList.remove('light');
          html.classList.add('dark');
          localStorage.setItem('brainzlab-theme', 'dark');
        }
        // Update icon if exists
        const icon = document.querySelector('[data-dark-mode-target="icon"]');
        if (icon) {
          icon.innerHTML = isDark
            ? '<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" /></svg>'
            : '<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" /></svg>';
        }
      };
    })();
  </script>

  <%= javascript_importmap_tags %>

  <style>
    body {
      font-family: 'Inter', system-ui, sans-serif;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }
    ::-webkit-scrollbar { width: 6px; height: 6px; }
    ::-webkit-scrollbar-track { background: var(--scrollbar-track); }
    ::-webkit-scrollbar-thumb { background: var(--scrollbar-thumb); border-radius: 3px; }
    ::-webkit-scrollbar-thumb:hover { background: var(--scrollbar-thumb-hover); }
  </style>

  <%# Google Analytics - only in production %>
  <% if Rails.env.production? %>
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-CXHFR6PC8W"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-CXHFR6PC8W');
    </script>
  <% end %>
</head>
<body class="h-full dm-body-gradient">
  <div class="flex h-full">
    <!-- Sidebar -->
    <aside class="w-64 flex flex-col dm-sidebar-enhanced relative overflow-hidden flex-shrink-0">
      <!-- Decorative gradient blobs -->
      <div class="dm-gradient-mesh">
        <div class="dm-gradient-blob dm-gradient-blob-primary" style="width: 200px; height: 200px; top: -60px; right: -60px;"></div>
        <div class="dm-gradient-blob dm-gradient-blob-secondary" style="width: 150px; height: 150px; bottom: 20%; left: -40px;"></div>
      </div>

      <!-- Logo -->
      <div class="p-5 border-b dm-border-secondary relative z-10">
        <%= link_to dashboard_root_path, class: "flex flex-col items-end gap-1 group" do %>
          <div class="flex items-center">
            <img src="/fluyenta-logo-light.png" alt="Fluyenta" class="h-12 dark:hidden">
            <img src="/fluyenta-logo-dark.png" alt="Fluyenta" class="h-12 hidden dark:block">
          </div>
          <span class="text-[10px] font-semibold tracking-wider uppercase px-1.5 py-0.5 rounded" style="color: var(--dm-brand); background: color-mix(in srgb, var(--dm-brand) 12%, transparent);">Signal</span>
        <% end %>
      </div>

      <% if @project&.persisted? %>
        <!-- Project Selector -->
        <div class="px-4 py-3 border-b dm-border-secondary relative z-10">
          <%= link_to dashboard_projects_path, class: "flex items-center gap-2 px-2 py-1.5 rounded-lg transition dm-hover dm-text-muted" do %>
            <div class="w-6 h-6 rounded flex items-center justify-center text-xs font-semibold" style="background: rgba(217, 119, 6, 0.15); color: var(--color-signal);">
              <%= @project.name.first.upcase %>
            </div>
            <span class="flex-1 text-sm font-medium truncate dm-text"><%= @project.name %></span>
            <svg class="w-4 h-4 dm-text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 9l4-4 4 4m0 6l-4 4-4-4"/>
            </svg>
          <% end %>
        </div>

        <!-- Navigation -->
        <nav class="p-4 space-y-1 flex-1 relative z-10">
          <%= link_to dashboard_project_overview_path(@project), class: nav_link_class('/overview') do %>
            <%= icon(:overview) %>
            Overview
          <% end %>

          <%= link_to dashboard_project_analytics_path(@project), class: nav_link_class('/analytics') do %>
            <%= icon(:analytics) %>
            Analytics
          <% end %>

          <%= link_to dashboard_project_alerts_path(@project), class: nav_link_class('/alerts') do %>
            <%= icon(:alerts) %>
            Alerts
          <% end %>

          <%= link_to dashboard_project_incidents_path(@project), class: nav_link_class('/incidents') do %>
            <%= icon(:incidents) %>
            Incidents
          <% end %>

          <%= link_to dashboard_project_rules_path(@project), class: nav_link_class('/rules') do %>
            <%= icon(:rules) %>
            Rules
          <% end %>

          <%= link_to dashboard_project_channels_path(@project), class: nav_link_class('/channels') do %>
            <%= icon(:channels) %>
            Channels
          <% end %>

          <%= link_to dashboard_project_escalation_policies_path(@project), class: nav_link_class('/escalation') do %>
            <%= icon(:escalation) %>
            Escalation
          <% end %>

          <%= link_to dashboard_project_on_call_schedules_path(@project), class: nav_link_class('/on_call') do %>
            <%= icon(:on_call) %>
            On-Call
          <% end %>

          <%= link_to dashboard_project_maintenance_windows_path(@project), class: nav_link_class('/maintenance') do %>
            <%= icon(:maintenance) %>
            Maintenance
          <% end %>

          <%= link_to dashboard_project_setup_path(@project), class: nav_link_class('/setup') do %>
            <%= icon(:setup) %>
            Setup
          <% end %>

          <%= link_to edit_dashboard_project_path(@project), class: nav_link_class('/settings') do %>
            <%= icon(:settings) %>
            Settings
          <% end %>
        </nav>
      <% else %>
        <nav class="p-4 flex-1 relative z-10">
          <p class="px-3 text-xs font-medium uppercase tracking-wider mb-3 dm-text-muted">Select a project</p>
        </nav>
      <% end %>

      <!-- User Menu -->
      <% if defined?(current_user) && current_user %>
        <div class="p-3 border-t dm-border-secondary relative z-10">
          <div class="flex items-center gap-3 px-2 py-2 rounded-xl dm-surface-hover transition">
            <div class="dm-member-avatar w-8 h-8 text-[12px]">
              <%= current_user.name&.first&.upcase || current_user.email.first.upcase %>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-[13px] font-medium truncate dm-text"><%= current_user.name || current_user.email.split('@').first %></p>
              <p class="text-[11px] truncate dm-text-muted"><%= current_user.email %></p>
            </div>

            <!-- Dark Mode Toggle -->
            <button onclick="toggleDarkMode()"
                    class="p-1.5 rounded-lg transition-all dm-text-muted hover:dm-text hover:bg-transparent"
                    data-dark-mode-target="icon"
                    title="Toggle dark mode">
              <svg data-dark-mode-target="sunIcon" class="w-4 h-4 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/>
              </svg>
              <svg data-dark-mode-target="moonIcon" class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"/>
              </svg>
            </button>
          </div>
        </div>
      <% end %>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 overflow-auto relative">
      <!-- Decorative gradient blobs -->
      <div class="dm-gradient-mesh">
        <div class="dm-gradient-blob dm-gradient-blob-primary" style="width: 500px; height: 500px; top: -150px; right: 5%;"></div>
        <div class="dm-gradient-blob dm-gradient-blob-secondary" style="width: 400px; height: 400px; bottom: 10%; left: -100px;"></div>
        <div class="dm-gradient-blob dm-gradient-blob-cyan" style="width: 300px; height: 300px; top: 40%; right: -80px;"></div>
      </div>

      <% if notice %>
        <div class="m-8 mb-0 px-4 py-3 rounded-xl text-[13px] font-medium flex items-center gap-3 dm-success border dm-fade-in-up relative z-10">
          <svg class="w-4 h-4 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
          <%= notice %>
        </div>
      <% end %>
      <% if alert || flash[:error] %>
        <div class="m-8 mb-0 px-4 py-3 rounded-xl text-[13px] font-medium flex items-center gap-3 dm-error border dm-fade-in-up relative z-10">
          <svg class="w-4 h-4 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/></svg>
          <%= alert || flash[:error] %>
        </div>
      <% end %>

      <div class="p-8 relative z-10">
        <%= yield %>
      </div>
    </main>
  </div>
</body>
</html>
