<!DOCTYPE html>
<html lang="en" class="h-full" data-controller="dark-mode">
<head>
  <title>Signal - <%= content_for(:title) || "Alerting & Incidents" %></title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%# Fonts %>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&family=Source+Serif+4:opsz,wght@8..60,400;8..60,500;8..60,600;8..60,700&display=swap" rel="stylesheet">

  <%# BrainzLab UI Design System %>
  <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag "dark_mode", "data-turbo-track": "reload" %>

  <style>
    :root {
      /* Signal-specific brand colors */
      --color-signal: #D97706;
      --color-signal-dark: #B45309;
      --color-signal-light: #F59E0B;
      --color-signal-bg: #FEF3C7;
      --color-signal-bg-subtle: #FFFBEB;
    }
  </style>

  <%# Prevent flash of wrong theme on page load %>
  <script>
    (function() {
      const savedTheme = localStorage.getItem('brainzlab-theme');
      const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
      if (savedTheme === 'dark' || (!savedTheme && systemPrefersDark)) {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.add('light');
      }
    })();
  </script>

  <%= javascript_importmap_tags %>

  <%# Google Analytics - only in production %>
  <% if Rails.env.production? %>
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-CXHFR6PC8W"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-CXHFR6PC8W');
    </script>
  <% end %>
</head>
<body class="h-full antialiased bg-theme">
  <div class="flex h-full">
    <!-- Sidebar -->
    <aside class="w-64 flex flex-col bg-surface border-r border-theme">
      <div class="p-5 border-b border-theme">
        <%= link_to dashboard_root_path, class: "flex items-center gap-2.5" do %>
          <div class="w-8 h-8 rounded-lg flex items-center justify-center" style="background: var(--color-signal);">
            <svg class="w-5 h-5 text-white" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2L4 12L12 22L20 12L12 2Z"/>
              <circle cx="12" cy="12" r="3" fill="white"/>
            </svg>
          </div>
          <span class="font-semibold text-primary">Signal</span>
        <% end %>
      </div>

      <% if @project&.persisted? %>
        <!-- Project Selector -->
        <div class="px-4 py-3 border-b border-theme">
          <%= link_to dashboard_projects_path, class: "flex items-center gap-2 px-2 py-1.5 rounded-lg transition text-subtle hover:text-primary" do %>
            <div class="w-6 h-6 rounded flex items-center justify-center text-xs font-semibold" style="background: rgba(217, 119, 6, 0.15); color: var(--color-signal);">
              <%= @project.name.first.upcase %>
            </div>
            <span class="flex-1 text-sm font-medium truncate"><%= @project.name %></span>
            <svg class="w-4 h-4 text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 9l4-4 4 4m0 6l-4 4-4-4"/>
            </svg>
          <% end %>
        </div>

        <!-- Navigation -->
        <nav class="p-4 space-y-1 flex-1">
          <%= link_to dashboard_project_alerts_path(@project), class: nav_link_class('/alerts') do %>
            <%= icon(:alerts) %>
            Alerts
          <% end %>

          <%= link_to dashboard_project_incidents_path(@project), class: nav_link_class('/incidents') do %>
            <%= icon(:incidents) %>
            Incidents
          <% end %>

          <%= link_to dashboard_project_rules_path(@project), class: nav_link_class('/rules') do %>
            <%= icon(:rules) %>
            Rules
          <% end %>

          <%= link_to dashboard_project_channels_path(@project), class: nav_link_class('/channels') do %>
            <%= icon(:channels) %>
            Channels
          <% end %>

          <%= link_to dashboard_project_escalation_policies_path(@project), class: nav_link_class('/escalation') do %>
            <%= icon(:escalation) %>
            Escalation
          <% end %>

          <%= link_to dashboard_project_on_call_schedules_path(@project), class: nav_link_class('/on_call') do %>
            <%= icon(:on_call) %>
            On-Call
          <% end %>

          <%= link_to dashboard_project_maintenance_windows_path(@project), class: nav_link_class('/maintenance') do %>
            <%= icon(:maintenance) %>
            Maintenance
          <% end %>

          <%= link_to edit_dashboard_project_path(@project), class: nav_link_class('/settings') do %>
            <%= icon(:settings) %>
            Settings
          <% end %>
        </nav>
      <% else %>
        <nav class="p-4 flex-1">
          <p class="px-3 text-xs font-medium uppercase tracking-wider mb-3 text-muted">Select a project</p>
        </nav>
      <% end %>

      <!-- Dark Mode Toggle & User Menu -->
      <div class="border-t border-theme">
        <!-- Dark Mode Toggle -->
        <div class="px-4 py-3 border-b border-theme">
          <button
            type="button"
            data-action="click->dark-mode#toggle"
            class="flex items-center gap-3 w-full px-2 py-1.5 rounded-lg transition text-subtle hover:text-primary hover:bg-surface-hover"
          >
            <span data-dark-mode-target="icon" class="w-5 h-5 flex items-center justify-center">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
              </svg>
            </span>
            <span class="text-sm font-medium" data-dark-mode-target="label">Dark Mode</span>
          </button>
        </div>

        <% if defined?(current_user) && current_user %>
          <div class="p-4">
            <div class="flex items-center gap-3">
              <div class="avatar avatar-md avatar-primary">
                <%= current_user.name&.first&.upcase || current_user.email.first.upcase %>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium truncate text-primary"><%= current_user.name || current_user.email.split('@').first %></p>
                <p class="text-xs truncate text-muted"><%= current_user.email %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 overflow-auto">
      <% if notice %>
        <div class="m-8 mb-0 alert alert-success">
          <svg class="w-5 h-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span><%= notice %></span>
        </div>
      <% end %>
      <% if alert %>
        <div class="m-8 mb-0 alert alert-error">
          <svg class="w-5 h-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z" />
          </svg>
          <span><%= alert %></span>
        </div>
      <% end %>

      <div class="p-8">
        <%= yield %>
      </div>
    </main>
  </div>
</body>
</html>
